@model List<Gestion_note.Models.Teacher>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="float-end">
    <button type="button" class="btn btn-success btn-small float-end mx-3" onclick="location.href='@Url.Action("Add", "Teacher")'">
        Add Teacher
    </button>
</div>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Teacher Name</th>
            <th scope="col">Teacher Email</th>
            <th scope="col">Teacher Filier</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        
        @foreach(var teacher in Model)
        {   
                @foreach(var filier in teacher.Filiers){
                <tr class="w-100">

                    <td>@teacher.Id</td>
                    <td>@teacher.Name</td>
                    <td>@teacher.Email</td>
                    <td>@filier.Name</td>
                    <td class="float-end">
                        <button type="button" class="btn btn-warning btn-small float-end mx-3" onclick="location.href='@Url.Action("Edit", "Teacher" , new { id = teacher.Id })'">
                            Edit Teacher
                        </button>
                        <button type="button" class="btn btn-danger btn-small float-end mx-3" onclick="location.href='@Url.Action("Delete", "Teacher",new { id = teacher.Id })'">
                            Delete Teacher
                        </button>
                    </td>
                </tr>

                }
        }
        

    </tbody>
</table>