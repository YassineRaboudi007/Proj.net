@model List<Gestion_note.Models.Matiere>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="float-end">
    <button type="button" class="btn btn-success btn-small float-end mx-3" onclick="location.href='@Url.Action("Add", "Subject")'">
        Add Subject
    </button>
</div>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Subject Name</th>
            <th scope="col">Subject Coefficent</th>
            <th scope="col">Filier name</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        

        @foreach(var subject in Model)
        {
            
                @foreach (var fileir in subject.FilierMatier){
                <tr class="w-100">

                    <td>@subject.Id</td>
                    <td>@subject.Name</td>
                    <td>@subject.Coefficent</td>
                    <td>@fileir.Name</td>
                    <td class="float-start">
                        <button type="button" class="btn btn-warning btn-small float-end mx-3" onclick="location.href='@Url.Action("Edit", "Subject",new { id = subject.Id })'">
                            Edit Subject
                        </button>

                        @*
                        <button type="button" class="btn btn-primary btn-small float-end" onclick="location.href='@Url.Action("Index", "Student")'">
                            See Student List
                        </button>
                
                        *@
                    </td>
                </tr>

                }
            
        }
        

    </tbody>
</table>