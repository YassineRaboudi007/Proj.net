@model List<Gestion_note.Models.Matiere>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="float-start mx-3">
    <h1>List of student in this filiere</h1>
</div>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Student Id</th>
            <th scope="col">Student Name</th>
            <th scope="col">Subject Id</th>
            <th scope="col">Subject Name</th>
            <th scope="col">Subject Coefficient</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Matiere mat in Model)
        {

            <tr class="w-100">
                <td>@ViewBag.student.Id</td>
                <td>@ViewBag.student.Name</td>
                <td>@mat.Id</td>
                <td>@mat.Name</td>
                <td>@mat.Coefficent</td>
                <td class="float-start">
                    <button type="button" class="btn btn-warning btn-small float-end mx-3" onclick="location.href='@Url.Action("Add", "Note" , new { idStudent = ViewBag.student.Id ,IdMat=mat.Id })'">
                        Add Mark
                    </button>
                </td>
            </tr>

        }
    </tbody>
</table>