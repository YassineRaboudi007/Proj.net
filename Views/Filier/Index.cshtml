@model List<Gestion_note.Models.Filier>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="float-end">
    <button type="button" class="btn btn-success btn-small float-end mx-3" onclick="location.href='@Url.Action("Add", "Filiere")'">
        Add Filiere
    </button>
</div>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Filier Name</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>


        @foreach (var filier in Model)
        {

            <tr class="w-100">
                <td>@filier.Id</td>
                <td>@filier.Name</td>

                <td class="float-end">
                    <button type="button" class="btn btn-primary btn-small float-end mx-3" onclick="location.href='@Url.Action("FilierStudent", "Student",new { id = filier.Id })'">
                        See Students
                    </button>
                    <button type="button" class="btn btn-warning btn-small float-end mx-3" onclick="location.href='@Url.Action("Edit", "Filiere",new { id = filier.Id })'">
                        Edit Filiere
                    </button>
                    <button type="button" class="btn btn-danger btn-small float-end mx-3" onclick="location.href='@Url.Action("Delete", "Filiere",new { id = filier.Id })'">
                        Delete Filiere
                    </button>
                    
                </td>
            </tr>

        }


    </tbody>
</table>